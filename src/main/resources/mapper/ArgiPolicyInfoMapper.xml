<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.ArgiPolicyInfoDao">

    <select id="findByName" resultType="com.example.vo.ArgiPolicyInfoVo">
        select `argi_policy_info`.* from `argi_policy_info`

        where 1 = 1
        <if test="name != null and name != '' and name != 'all'">
            and `argi_policy_info`.`name` like concat('%', #{name}, '%')
        </if>
        order by `argi_policy_info`.id
    </select>

    <select id="findVoById" resultType="com.example.vo.ArgiPolicyInfoVo">
        select `argi_policy_info`.* from `argi_policy_info`

        where `argi_policy_info`.id = #{id}
    </select>


</mapper>