<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.example.dao.AgriTechInfoDao">

    <select id="findByName" resultType="com.example.vo.AgriTechInfoVo">
        select `agri_tech_info`.* from `agri_tech_info`

        where 1 = 1
        <if test="name != null and name != '' and name != 'all'">
            and `agri_tech_info`.`name` like concat('%', #{name}, '%')
        </if>
        order by `agri_tech_info`.id
    </select>

    <select id="findVoById" resultType="com.example.vo.AgriTechInfoVo">
        select `agri_tech_info`.* from `agri_tech_info`

        where `agri_tech_info`.id = #{id}
    </select>


</mapper>